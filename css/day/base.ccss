*:
	box-sizing: border-box
	padding: 0
	margin: 0

html:
	height: 100% // for body

body:
	background-color: #FDFFFC
	color: #011627
	font-family: sans-serif
	height: 100% // for main

a:
	color: #3ae
	text-decoration: none

p:
	margin-top: 1em

	&:first-child:
		margin-top: 0

input, button, textarea, select:
	border: 1px solid #777
	padding: 3px 4px
input, button, textarea:
	background-color: #FFF
	color: inherit

header:
	position: fixed
	width: 17em
	height: 100%
	display: flex
	flex-flow: column wrap
	padding: 1em
	text-align: center
	font-family: sans-serif
	background-color: #011627

	div:
		width: 100%
		flex-grow: 1
		display: flex
		flex-direction: column
		justify-content: center
		align-items: center

main:
	height: 100% // for article.fullpage
	padding: 3em 3em 3em 20em

article:
	width: 80%
	max-width: 850px
	margin: 3em auto
	padding: 3em
	background-color: #EEE

	& > blockquote: // post body
		margin-top: 1em
		font-family: serif
		font-size: 1.4em
		line-height: 1.5em

		h1, h2, h3, h4, h5, h6:
			margin-top: inherit

		code: // fenced and inline code
			padding: 0.1em 0.2em
			background-color: #AAA

		pre ~ p: // p following fenced code
			margin-top: 0

		blockquote: // markdown quote
			padding: 0.25em 0.5em
			border-left: 0.2em solid #974
			background-color: #222

		img:
			max-width: 754px

		ol, ul:
			margin-left: 1em

@media (max-width: 900px):
	body:
		font-size: 10px

	header:
		position: relative
		height: 4em
		width: 100%
		flex-flow: row nowrap

		& > a:
			display: none

	main:
		padding: 0

	article:
		width: 100%
		padding: 2em
		margin: 1em auto
